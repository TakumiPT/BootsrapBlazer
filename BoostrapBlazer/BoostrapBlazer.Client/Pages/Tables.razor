@page "/tables"
@using Core
@rendermode InteractiveServer


<Table Value="Products"
	   Columns="ColumnsData"
	   Rows="5"
	   Paginator="true"
	   Bordered="true"
	   HeadColor="Colors.Light"
	   Responsive="TableResponsive.Allways">
	<TemplateHeader>

		<tr>

			@foreach (var col in @context)
			{
				<th scope="col">@col.Header</th>
			}

		</tr>
	</TemplateHeader>

	<TemplateBody>
		<tr>
			@foreach (var col in ColumnsData)
			{
				<td>

					@if (context.GetType().GetProperty(col.Header) != null)
					{
						@context.GetType().GetProperty(col.Header)?.GetValue(context)
					}
				</td>
			}
		</tr>
	</TemplateBody>
</Table>

